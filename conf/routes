# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /ws                         controllers.SocketController.socket(name: String, game: String, id: Long)
GET     /create_game                controllers.CreateGameController.create
GET     /join_game                  controllers.JoinGameController.view
GET     /game                       controllers.JoinGameController.join(name: String, game: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

