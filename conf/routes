# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index
GET     /ws                                     controllers.SocketController.socket
GET     /game_definition                        controllers.GameDefinitionsController.getDefinitions
POST    /create_game/:name                      controllers.CreateGameController.create(name: String)
POST    /join_game/:gameName/:gameId/:userName  controllers.JoinGameController.join(userName: String, gameName: String, gameId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)

